@*@model User*@

@{
    ViewBag.Title = "Home Page";
}

<head>
    <style>
        a{
            color:black;
        }
    </style>
</head>
<div class="jumbotron" dir="rtl" style="background-color:darkgray; text-align:center">
    <h1>سامانه ثبت ساعت ورود و خروج</h1>
    <p class="lead">بهترین سامانه ی ثبت ورود و خروج کل کهکشان راه شیری.</p>
</div>

<div class="row">

    <div class="col-md-12" dir="rtl">
        @if (User.Identity.IsAuthenticated)
        {
            if (!User.IsInRole("Admin"))
            {
                <h2 style="text-align:center">
                    @Html.ActionLink("درخواست ها", "Index", "Requests")
                </h2>
            }
            else
            {
                <h2 style="text-align:center">
                    @Html.ActionLink("لیست درخواست ها", "AllRequests", "Requests")
                    <br />
                    <br />
                    @Html.ActionLink("لیست کاربران", "Index", "UsersAdmin")
                </h2>

            }
        }
        else
        {
            <h2 style="text-align:center; margin:20px;">شما هنوز به حساب کاربری خود وارد نشده اید!</h2>
        }
    </div>
</div>